<% title 'Create Account' %>
<div class="panel-heading">
  <span class="glyphicon glyphicon-envelope"></span>
  <h4 class="registration"><strong>Registration</strong></h4>
</div>

<div class="panel-body">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%= f.label :full_name %>
      <%= f.text_field :full_name, placeholder: 'Full Name', autofocus: true, class: 'form-control', required: true %>
    </div>

    <div class="form-group">
      <%= f.label :email %>
      <%= f.email_field :email, placeholder: 'Email', class: 'form-control', required: true %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password, placeholder: 'Password', autocomplete: 'off', class: 'form-control', required: true %>
      <% if @minimum_password_length %>
        <em class="password-length">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :password %>
      <%= f.password_field :password_confirmation, placeholder: 'Confirm Password', autocomplete: 'off', class: 'form-control', required: true %>
    </div>

    <div class="form-group">
      <%= f.label :upload_profile_photo %>
      <%= f.fields_for :attachment, Attachment.new do |image_form| %>
        <%= image_form.file_field :image %>
      <% end %>
    </div>

    <%= render "devise/shared/links" %>

    <div class="actions">
        <%= f.submit 'Sign up', class: 'btn btn-success btn-sm pull-right' %>
    </div>
  <% end %>
</div>
