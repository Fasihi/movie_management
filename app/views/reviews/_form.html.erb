<div>
  <% if user_signed_in? %>
    <%= form_for([@movie, @review], remote: true) do |f| %>
      <h4><%= f.label :comment %></h4><br>
      <%= f.text_area :comment, class: 'form-control', maxlength: 2000 %>
      <%= f.submit 'Submit', class: 'btn btn-default pull-right' %>
    <% end %>
  <% end %>
</div>
